@model TBSLogistics.WebApp.Models.Tbs_Category
<form class="user">
    <div class="form-group">
        <input type="text" class="form-control form-control-user" id="uName" value="@Model.Name">
    </div>
    <div class="form-group">
        <textarea type="text" class="form-control" id="uDesc" value="@Model.Name">@Model.Name</textarea>
    </div>
    <div class="form-group">
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="uImage">
            <label class="custom-file-label" for="uImage">Choose file...</label>
        </div>
    </div>
    <div class="form-group">
        <div class="custom-control custom-checkbox small">
            @if (Model.IsActive == true)
            {


                <input type="checkbox" class="custom-control-input" id="isActive" checked>
            }
            else
            {
                <input type="checkbox" class="custom-control-input" id="isActive">
            }

            <label class="custom-control-label" for="isActive">
                Activate
            </label>
        </div>
    </div>
    <input type="number" id="categoryID" value="@Model.ID" hidden />
    <a href="#" class="btn btn-primary btn-user btn-block" id="update-category">
        Save
    </a>
</form>
