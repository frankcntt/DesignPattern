@model IEnumerable<TBSLogistics.WebApp.Models.Tbs_Product>

<div class="table-responsive">
    <table class="table table-condensed" id="dataTable" width="100%" cellspacing="0" style="font-size:14px !important">
        <thead>
            <tr>
                <th style="width:25%">
                    Name
                </th>

                <th style="width:10%">
                    Price
                </th>
                <th style="width:10%">
                    Inventory(Qty)
                </th>
                <th style="width:10%">
                    FreeShip
                </th>
                <th style="width:25%">
                    Image
                </th>
                <th style="width:10%">
                    IsActive
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var product in Model)
            {
            <tr>
                <td>
                    @product.Name
                </td>
                <td>
                    @product.Price
                </td>
               
                <td>
                    @product.Inventory
                </td>
                <td>
                    @if (product.IsFreeShip == true)
                    {
                        <span class="badge badge-primary">Yes</span>
                    }
                    else
                    {
                        <span class="badge badge-info">No</span>
                    }
                </td>
                <td>
                    <a href="#" class="pop">
                        <img src="@product.Image" width="80%" />
                    </a>
                </td>
                <td class="text-md-center">
                    @if (product.IsActve == true)
                    {
                        <span class="text-success"><i class="fa fa-eye" aria-hidden="true"></i></span>
                    }
                    else
                    {
                        <span class="text-danger"><i class="fa fa-eye-slash" aria-hidden="true"></i></span>
                    }
                </td>
                <td class="text-md-center">
                    <a href="#" class="btn btn-sm btn-success btn-rounded detail-product-modal m-1" title="Detail Category" id="@product.ID">
                        <i class="fa fa-info-circle" aria-hidden="true"></i>
                    </a>
                    <a href="#" class="btn btn-sm btn-secondary btn-rounded update-product-modal m-1" title="Update Category" id="@product.ID">
                        <i class="fa fa-wrench" aria-hidden="true"></i>
                    </a>
                    <a href="#" class="btn btn-sm btn-danger btn-rounded delete-product m-1" title="Delete Category" id="@product.ID">
                        <i class="fa fa-ban" aria-hidden="true"></i>
                    </a>

                </td>
            </tr>
            }
        </tbody>
    </table>
</div>