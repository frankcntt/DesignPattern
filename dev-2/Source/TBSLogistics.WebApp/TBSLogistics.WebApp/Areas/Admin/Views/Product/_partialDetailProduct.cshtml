@model TBSLogistics.WebApp.Models.Tbs_Product
<form class="user" enctype="multipart/form-data" id="Submitf" name="Submitf">
    <div class="form-group">
        <label class="label-primary font-weight-bold">Name:</label>
        <p>@Model.Name</p>
    </div>
    <hr />
    <div class="form-group">
        <label class="col-form-label-sm font-weight-bold">Description:</label>
        <p>@Model.Description</p>
    </div>
    <hr />
    <div class="form-group row">
        <div class="col-sm-3 mb-3 mb-sm-0">
            <label class="col-form-label-sm font-weight-bold">Price:</label>
            <span>@string.Format("${0:n2}", Model.Price)</span>
        </div>
        <div class="col-sm-3">
            <label class="col-form-label-sm font-weight-bold">SKU:</label>
            <span>@Model.SKU</span>
        </div>
        <div class="col-sm-3">
            <label class="col-form-label-sm font-weight-bold">Inventory(Qty):</label>
            <span>@Model.Inventory</span>
        </div>
        <div class="col-sm-3">
            <label class="col-form-label-sm font-weight-bold">VAT:</label>
            <span>@Model.VAT</span>
        </div>
    </div>
    <hr />
    <div class="form-group row">
        <div class="col-sm-5 mb-3 mb-sm-0">
            <img src="@Model.Image" width="100%" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12 mb-3 mb-sm-0">
            <div class="custom-control custom-checkbox small">
                @if (Model.IsFreeShip == true)
                {


                    <input type="checkbox" class="custom-control-input" id="aIsFreeShip" name="aIsFreeShip" readonly checked>
                }
                else
                {
                    <input type="checkbox" class="custom-control-input" id="aIsFreeShip" name="aIsFreeShip" readonly>
                }

                <label class="custom-control-label" for="aIsFreeShip">
                    IsFreeShip
                </label>
            </div>

        </div>


    </div>
</form>
